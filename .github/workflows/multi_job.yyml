# This is a basic workflow to help you get started with Actions

name: multi job example

on:
  push:
    branches: [ "main" ]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      - name: Install dependencies
        run: npm install

  test:
    runs-on: ubuntu-latest
#    needs: build   # test will run only if build is successful
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Run tests
        run: npm test

  deploy:
    runs-on: ubuntu-latest
 #   needs: test   # deploy will run only if test is successful
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

